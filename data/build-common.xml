<project name="common">
    <!--Part of doms build framework version BUILD.FRAMEWORK.VERSION-->


    <property name="global.dir" value="${basedir}/.."/>
    <property name="jarfile" value="${ant.project.name}.jar"/>
    <property name="srcpack.zip" value="${ant.project.name}-src.zip"/>
    <property name="docspack.zip" value="${ant.project.name}-apidocs.zip"/>

    <import file="build-dependencies.xml"/>

    <property file="${global.dir}/build.properties"/>

    <dirname property="common.basedir" file="${ant.file.common}"/>


    <dirset id="soap" dir="${global.dir}/lib">
        <exclude name="**/*"/>
    </dirset>

    <dirset id="rest" dir="${global.dir}/lib">
        <exclude name="**/*"/>
    </dirset>

    <dirset id="common" dir="${global.dir}/lib">
        <include name="${sbutils.dir}"/>
    </dirset>

    <dirset id="module.dependencies" dir="${global.dir}/modules">
        <exclude name="**"/>
    </dirset>

    <fileset id="module.dependencies.jars" dir="${global.dir}/modules">
        <exclude name="**"/>
    </fileset>



    <target name="_preclean"/>
    <target name="_postclean"/>

    <target name="clean" depends="_preclean"
            description="Cleans the package of all build artifacts.">
        <delete dir="classes"/>
        <delete dir="tempsrc"/>
        <delete dir="dist"/>
        <antcall target="_postclean"/>
    </target>



    <target name="_preinit"/>
    <target name="_postinit"/>


    <target name="init">
        <echo message="Using doms buildframework version BUILD.FRAMEWORK.VERSION"/>
        <convertPath dirset="soap"
                             postfix="/jars/*.jar"
                             newfileset="soap.jars"/>

        <convertPath dirset="rest"
                             postfix="/jars/*.jar"
                             newfileset="rest.jars"/>

        <convertPath dirset="common"
                             postfix="/jars/*.jar"
                             newfileset="common.jars"/>

        <convertPath dirset="project.libs"
                             postfix="/jars/*.jar"
                             newfileset="project.libs.jars"/>

        <path id="build.classpath">
            <fileset refid="module.libs"/>
            <fileset refid="project.libs.jars"/>
            <fileset refid="module.dependencies.jars"/>
            <fileset refid="build.project.libs"/>
            <fileset refid="soap.jars"/>
            <fileset refid="rest.jars"/>
            <fileset refid="common.jars"/>
        </path>
        
    </target>



    <target name="_postcompile"/>
    <target name="_precompile"/>


    <target name="compile" depends="init,depends,_precompile"
            description="Compile all production classes, and copy properties to class dir">

        <pathconvert property="module.dependencies.pathconvert"
                     refid="module.dependencies">
            <mapper type="regexp" from="^(.)*" to="\0/dist/\*.jar"/>
        </pathconvert>

        <convertPath dirset="module.dependencies"
                     postfix="/dist/**/*.jar"
                     newfileset="module.dependencies.jars"/>

        <!-- get the source compile classpath in a printable form -->
        <pathconvert pathsep="${line.separator}|   |-- "
                     property="echo.path.compile"
                     refid="build.classpath">
        </pathconvert>

        <echo message="|-- compile classpath"/>
        <echo message="|   |"/>
        <echo message="|   |-- ${echo.path.compile}"/>


        <mkdir dir="classes"/>
        <mkdir dir="tempsrc"/>
        <javac source="1.6" destdir="classes" debug="on"
               encoding="UTF-8">
            <src>
                <pathelement path="src"/>
                <pathelement path="tempsrc"/>
            </src>
            <classpath refid="build.classpath"/>
        </javac>
        <copy todir="classes">
            <fileset dir="src">
                <include name="**/*.xml"/>
            </fileset>
            <fileset dir="tempsrc">
                <include name="**/*.xml"/>
            </fileset>

        </copy>
        <antcall target="_postcompile"/>
    </target>

    <target name="_prejar"/>
    <target name="_postjar"/>



    <target name="jar" depends="compile,_prejar">
        <mkdir dir="dist"/>

        <jar destfile="dist/${jarfile}"
             basedir="classes"/>
        <antcall target="_postjar"/>
    </target>

    <target name="_preall"/>
    <target name="_postall"/>

    <target name="all" depends="jar,sourcezip,apidocs,_preall"
            description="Build the distributable package">
        <mkdir dir="dist"/>

        <copy todir="dist" flatten="true">
            <fileset refid="module.libs"/>
        </copy>
        <antcall target="_postall"/>
    </target>

    <target name="_presourcezip"/>
    <target name="_postsourcezip"/>


    <target name="sourcezip" depends="_presourcezip">
        <mkdir dir="dist"/>

        <zip destfile="dist/${srcpack.zip}">
            <zipfileset dir="src">
                <include name="**/*"/>
            </zipfileset>
<!--
            <zipfileset dir="tempsrc">
                <include name="**/*"/>
            </zipfileset>
-->
        </zip>
        <antcall target="_postsourcezip"/>
    </target>

    <target name="_preapidocs"/>

    <target name="_postapidocs"/>

    <target name="apidocs" depends="init, _preapidocs">
        <mkdir dir="docstemp"/>
        <mkdir dir="dist"/>
        <javadoc sourcepath="src" destdir="docstemp" classpathref="build.classpath"/>
        <zip destfile="dist/${docspack.zip}">
            <zipfileset dir="docstemp">
                <include name="**/*"/>
            </zipfileset>
        </zip>
        <delete dir="docstemp"/>
        <antcall target="_postapidocs"/>
    </target>


    <target  name="_copyLibsForDist">
        <convertPath dirset="project.libs"
                     postfix="/**/*"
                     newfileset="project.libs.all"/>
        <convertPath dirset="soap"
                     postfix="/**/*"
                     newfileset="soap.all"/>
        <convertPath dirset="rest"
                     postfix="/**/*"
                     newfileset="rest.all"/>
        <convertPath dirset="common"
                     postfix="/**/*"
                     newfileset="common.all"/>



        <copy todir="${global.dir}/usedlibs" overwrite="false" >
            <fileset refid="project.libs.all"/>
            <fileset refid="soap.all"/>
            <fileset refid="rest.all"/>
            <fileset refid="common.all"/>
        </copy>
    </target>
</project>